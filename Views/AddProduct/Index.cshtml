@using fooddeliverysystem.Models;
@model List<ProductModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AppLayout.cshtml";
}



<div style="float:right">
    <!-- Trigger the modal with a button -->
    <button type="button" class="btn btn-info btn-md" onclick="showProductCreateModal()" data-target="#myModal">Add</button>
</div>
<h2>Product List</h2>

<div class="row table-responsive" id="ProductListDiv">
    @Html.Partial("GetProductList", Model)
</div>


<!-- Modal -->
<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Product Detail</h4>
            </div>
            <div class="modal-body">
                <style type="text/css">
                    .login-form {
                        width: 340px;
                        margin: 45px auto;
                    }

                        .login-form form {
                            margin-bottom: 20px;
                            background: #f7f7f7;
                            box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
                            padding: 30px;
                        }

                        .login-form h2 {
                            margin: 0 0 15px;
                        }

                    .form-control, .btn {
                        min-height: 38px;
                        border-radius: 2px;
                    }

                    .btn {
                        font-size: 15px;
                        font-weight: bold;
                    }
                </style>

                <div class="">
                    <h2 class="text-center">Product Details</h2>
                    @Html.Hidden("ProductId", 0)
                    <div class="form-group">
                        <label>Plan Name</label>
                        @Html.TextBox("ProductName", "", new { @class = "form-control", @placeholder = "Product Name" })
                    </div>
                    <div class="form-group">
                        <label>Product Price</label>
                        @Html.TextBox("Price", "", new { @class = "form-control", @placeholder = "Product Price" })
                    </div>
                    <div class="form-group">
                        <label>Product category</label>
                        @Html.TextBox("CatId", "", new { @class = "form-control", @placeholder = "Category Id" })
                    </div>

                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" onclick="SaveProduct()">Save</button>
                <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>
<script>
    function SaveProduct() {
        var productId = parseInt($("#ProductId").val());
        var productName = $("#ProductName").val();
        var price = $("#Price").val();
        var catId = $("#CatId").val();
        var data = {
            ProductId: productId,
            ProductName: productName,
            Price: price,
            CatId: catId
        };

        $.ajax({
            type: 'POST',
            url: "/AddProduct/SaveProduct",
            data: data,
            success: function (response) {
                if (response.IsSuccess == true) {
                    closeModal();
                    if (planId > 0) {
                        alert('Updated successfully');
                    }
                    else {
                        alert('Saved successfully');
                    }

                    refreshProductList();
                }
                else {
                    alert("not saved");
                }
            },
            error: function (XMLHttpRequest, textStatus, errorThrown) {
                alert('error');
            }, complete: function () {

            }
        });
    }

    function openModal() {
        $('#myModal').modal('show');
    }
    function closeModal() {

        $('#myModal').modal('hide');
    }

    function refreshProductList() {
        $.ajax({
            type: 'GET',
            url: "/AddProduct/GetProductList",
            data: {},
            success: function (response) {
                $("#ProductListDiv").html(response);
            },
            error: function (XMLHttpRequest, textStatus, errorThrown) {
                alert('error');
            }, complete: function () {

            }
        });
    }

    function resetModal() {
        $("#ProductId").val(0);
        $("#ProductName").val("");
        //$("#IsVegOption").prop("checked", true);
        $("#Price").val();
        $("#Category").val();
    }

    function showProductCreateModal() {
        openModal();
        resetModal();
    }


</script>